<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.MapElementsView"
             xmlns:components="clr-namespace:App1.components">
    <ContentPage.Content>
        <Grid
            BackgroundColor="LightGray"
            RowDefinitions="Auto,*"
            Padding="18">
            <components:NewSearchComponent
                TapCommand="{Binding SearchCommand}"
                />

            <Label 
                Grid.Row="1"
                Text="{Binding Text}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>